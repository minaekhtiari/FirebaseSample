<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

<!--        <variable-->
<!--            name="LoginModel"-->
<!--            type="com.example.firebasesample.LoginModel" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1.05"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_weight="0.95"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group16_constraint_layout"
                android:layout_width="272dp"
                android:layout_height="226dp"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <Button
                    android:id="@+id/signup_button"
                    android:layout_width="131dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/sing_up"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/group16_two_constraint_layout" />

                <Button
                    android:id="@+id/or_connect_with_face_button"
                    android:layout_width="204dp"
                    android:layout_height="58dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/connect_with_facebook"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/group94_button"
                    android:layout_width="131dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="@string/log_in"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/group16_two_constraint_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/group16_two_constraint_layout"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/layout_two_background"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/group91_constraint_layout"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="60dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="69dp"
                        android:layout_height="17dp"
                        android:layout_marginStart="18dp"
                        android:background="#00000000"
                        android:gravity="start|center_vertical"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#D0D1D5"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/group28_image_view"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="14dp" />

                    <ImageView
                        android:id="@+id/group28_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:contentDescription="TODO"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_lock_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="21dp"
                        tools:layout_editor_absoluteY="16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/group91_constraint_layout"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/layout_two_background"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="69dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="16dp"
                        android:background="#00000000"
                        android:gravity="start|center_vertical"
                        android:hint="@string/user_name"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#D0D1D5"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/group92_image_view"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.518"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/group92_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_person_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="21dp"
                        tools:layout_editor_absoluteY="13dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>